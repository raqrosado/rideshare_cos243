          "id": 22,
          "date": "2021-12-01",
          "time": "T22:18:26.625Z",
          "distance": 250,
          "fuelPrice": 3.16,
          "fee": 8.99,
          "vehicleId": 12,
          "fromLocationId": 18,
          "toLocationId": 19
