          "id": { "type": "integer" },
          "date": { "type": "date" },
          "time": { "type": "time" },
          "distance": { "type": "float" },
          "fuelPrice": { "type": "float" },
          "fee": { "type": "float" },
          "vehicleId": { "type": "integer" },
          "fromLocationId": { "type": "integer" },
          "toLocationId": { "type": "integer" }
