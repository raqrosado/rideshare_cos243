        "properties": {
          "id": {
            "type": "integer"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "isAdmin": {
            "type": "boolean"
          }
        },
        "example": {
          "id": 42,
          "firstName": "Fred",
          "lastName": "Ziffle",
          "email": "fred@example.com",
          "password": "super-secret-thing",
          "phone": "765-555-1212",
          "isAdmin": false
        }
      },
